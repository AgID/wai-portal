{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "Web Analytics Italia API",
        "description": "Questa interfaccia API si riferisce alle operazioni che le Pubbliche Amministrazioni possono eseguire in interoperabilità per gestire utenti e siti o consultare le informazioni statistiche.",
        "contact": {
            "name": "AGID - Web Analytics Italia",
            "url": "https://webanalytics.italia.it/contacts",
            "email": "wai@agid.gov.it"
        }
    },
    "servers": [],
    "paths": {
        "/portal/users": {
            "post": {
                "tags": ["Utenti"],
                "summary": "Creazione di un nuovo utente",
                "operationId": "addUser",
                "requestBody": {
                    "description": "Dati dell'utente da creare",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Dati utente creato e uri a cui recuperare l'utente",
                        "headers": {
                            "Location": {
                                "schema": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "description": "Uri a cui recuperare l'utente"
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddUserResponse"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["Utenti"],
                "summary": "Restituisce l'elenco degli utenti",
                "operationId": "getUsers",
                "responses": {
                    "200": {
                        "description": "Elenco di tutti gli utenti che appartengono alla pubblica amministrazione delle credenziali",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserInfoObjectArray"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/users/{fn}": {
            "parameters": [
                { "$ref": "#/components/parameters/FiscalNumberInPath" }
            ],
            "get": {
                "tags": ["Utenti"],
                "summary": "Acquisisce le informazioni dell'utente",
                "operationId": "getUser",
                "responses": {
                    "200": {
                        "description": "Informazioni dell'utente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserInfoObject"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": ["Utenti"],
                "summary": "Modifica i dati dell'utente",
                "operationId": "patchUser",
                "requestBody": {
                    "description": "Dati dell'utente da creare",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PatchUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Utente modificato",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserInfoObject"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["Utenti"],
                "summary": "Eliminazione di un utente",
                "operationId": "deleteUser",
                "responses": { "204": { "description": "Utente cancellato" } }
            }
        },
        "/portal/users/{fn}/suspend": {
            "parameters": [
                { "$ref": "#/components/parameters/FiscalNumberInPath" }
            ],
            "patch": {
                "tags": ["Utenti"],
                "summary": "Sospendi utente",
                "operationId": "suspendUser",
                "responses": {
                    "200": {
                        "description": "Utente sospeso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserInfoObject"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/users/{fn}/reactivate": {
            "parameters": [
                { "$ref": "#/components/parameters/FiscalNumberInPath" }
            ],
            "patch": {
                "tags": ["Utenti"],
                "summary": "Ri-attiva utente",
                "operationId": "reactivateUser",
                "responses": {
                    "200": {
                        "description": "Utente Ri-attivato",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserInfoObject"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/sites": {
            "post": {
                "tags": ["Siti"],
                "summary": "Creazione di un sito",
                "operationId": "addSite",
                "requestBody": {
                    "description": "Dati dell'utente da creare",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddSiteRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Dati sito e uri a cui recuperare il sito",
                        "headers": {
                            "Location": {
                                "schema": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "description": "Uri a cui recuperare il sito"
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddSiteResponse"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["Siti"],
                "summary": "Restituisce l'elenco dei siti associati all'amministrazione",
                "operationId": "getSites",
                "responses": {
                    "200": {
                        "description": "Array dei siti",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SiteInfoArray"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/sites/{website}": {
            "parameters": [{ "$ref": "#/components/parameters/SlugInPath" }],
            "get": {
                "tags": ["Siti"],
                "summary": "Restituisce un sito",
                "operationId": "getSite",
                "responses": {
                    "200": {
                        "description": "Dati sito",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SingleSite"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": ["Siti"],
                "summary": "Modifica di un sito",
                "operationId": "patchSite",
                "requestBody": {
                    "description": "Dati del sito da modificare",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddSiteRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sito modificato",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SingleSite"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/sites/{website}/archive": {
            "parameters": [{ "$ref": "#/components/parameters/SlugInPath" }],
            "patch": {
                "tags": ["Siti"],
                "summary": "Archivia un sito",
                "operationId": "archiveSite",
                "responses": {
                    "200": {
                        "description": "Sito archiviato con successo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ArchiveWebsite"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/sites/{website}/unarchive": {
            "parameters": [{ "$ref": "#/components/parameters/SlugInPath" }],
            "patch": {
                "tags": ["Siti"],
                "summary": "De-archivia un sito",
                "operationId": "unarchiveSite",
                "responses": {
                    "200": {
                        "description": "Sito de-archiviato con successo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnarchiveWebsite"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/portal/sites/{website}/check": {
            "parameters": [{ "$ref": "#/components/parameters/SlugInPath" }],
            "get": {
                "tags": ["Siti"],
                "summary": "Controlla se il sito è attivo",
                "operationId": "checkSite",
                "responses": {
                    "304": {
                        "description": "Sito non attivo"
                    }
                }
            }
        },
        "/portal/sites/{website}/js-snippet": {
            "parameters": [{ "$ref": "#/components/parameters/SlugInPath" }],
            "get": {
                "tags": ["Siti"],
                "summary": "Ottieni lo snippet javascript",
                "operationId": "jsSnippetSite",
                "responses": {
                    "200": {
                        "description": "Javascript Snippet",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/JsSnippet"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "SlugInPath": {
                "in": "path",
                "required": true,
                "name": "website",
                "schema": {
                    "$ref": "#/components/schemas/SiteSlug"
                }
            },
            "FiscalNumberInPath": {
                "in": "path",
                "required": true,
                "name": "fn",
                "schema": {
                    "$ref": "#/components/schemas/FiscalNumber"
                }
            }
        },
        "schemas": {
            "SiteSlug": {
                "type": "string",
                "format": "^\\w+$"
            },
            "SiteType": {
                "type": "string",
                "description": "Tipologia di sito",
                "enum": ["site_type_1", "site_type_2", "site_type_3"]
            },
            "AddSiteRequest": {
                "required": ["name", "url", "type", "permissions"],
                "properties": {
                    "name": {
                        "description": "Nome del sito",
                        "type": "string",
                        "pattern": "^(?!\\s*$).+"
                    },
                    "url": {
                        "description": "Url del sito",
                        "type": "string",
                        "format": "uri"
                    },
                    "permissions": {
                        "$ref": "#/components/schemas/WebsiteInfoPermisionObject"
                    },
                    "type": {
                        "$ref": "#/components/schemas/SiteType"
                    }
                },
                "example": {
                    "name": "WebAnalytics Italia",
                    "url": "https://webanalytics.italia.it",
                    "type": "site_type_1",
                    "permissions": {
                        "userId": ["MANAGE_ANALYTICS"]
                    }
                }
            },
            "WebsiteInfoPermisionObject": {
                "type": "object",
                "required": ["userId"],
                "properties": {
                    "userId": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "AddSiteResponse": {
                "type": "object",
                "required": ["id", "name", "url", "analytics_id", "slug"],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "analytics_id": {
                        "type": "integer"
                    },
                    "slug": {
                        "type": "string"
                    }
                },
                "example": {
                    "id": 1,
                    "name": "Agenzia per L'Italia Digitale",
                    "url": "www.agid.gov.it",
                    "analytics_id": 2,
                    "slug": "wwwagidgovit"
                }
            },
            "UserSuspendObject": {
                "type": "object",
                "required": ["result", "user_name", "status"],
                "properties": {
                    "result": {
                        "type": "string"
                    },
                    "user_name": {
                        "type": "string"
                    },
                    "status_description": {
                        "type": "string"
                    }
                },
                "example": {
                    "result": "ok",
                    "id": "4427f41c-de93-4ce7-becc-99902a38799e",
                    "user_name": "Luisa Test",
                    "status": "SUSPENDED",
                    "status_description": "sospeso",
                    "trashed": false,
                    "administration": "Agenzia per L'Italia Digitale"
                }
            },
            "SiteInfoArray": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/AddSiteResponse"
                }
            },
            "SingleSite": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "analytics_id": {
                        "type": "integer"
                    },
                    "slug": {
                        "type": "string"
                    }
                }
            },
            "SiteInfo": {
                "allOf": [{ "$ref": "#/components/schemas/SingleSite" }],
                "type": "object",
                "example": {
                    "id": 1,
                    "name": "Agenzia per L'Italia Digitale",
                    "url": "www.agid.gov.it",
                    "type": 0,
                    "public_administration_id": 1,
                    "analytics_id": 2,
                    "slug": "wwwagidgovit",
                    "status": 1,
                    "created_at": "2020-07-21T17:32:28Z",
                    "updated_at": "2020-07-21T17:32:28Z",
                    "deleted_at": "2020-07-21T17:32:28Z"
                }
            },
            "ArchiveWebsite": {
                "type": "object",
                "required": ["slug"],
                "example": {
                    "result": "ok",
                    "id": "wwwagidgovit",
                    "website_name": "Agenzia per L'Italia Digitale",
                    "status": "ARCHIVED",
                    "status_description": "archiviato",
                    "trashed": false
                }
            },
            "UnarchiveWebsite": {
                "type": "object",
                "required": ["slug"],
                "example": {
                    "result": "ok",
                    "id": "wwwagidgovit",
                    "website_name": "Agenzia per L'Italia Digitale",
                    "status": "ACTIVE",
                    "status_description": "attivo",
                    "trashed": false
                }
            },
            "JsSnippet": {
                "example": {
                    "result": "ok",
                    "id": "wwwagidgovit",
                    "name": "Agenzia per L'Italia Digitale",
                    "javascriptSnippet": "<!-- Matomo -->\n<script type=\"text/javascript\">\n  var _paq = window._paq || [];\n  /* tracker methods like \"setCustomDimension\" should be called before \"trackPageView\" */\n  _paq.push(['trackPageView']);\n  _paq.push(['enableLinkTracking']);\n  (function() {\n    var u=\"https://172.22.0.10/\";\n    _paq.push(['setTrackerUrl', u+'matomo.php']);\n    _paq.push(['setSiteId', '3']);\n    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];\n    g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);\n  })();\n</script>\n<!-- End Matomo Code -->"
                }
            },
            "FiscalNumber": {
                "type": "string",
                "minLength": 16,
                "maxLength": 16,
                "pattern": "[A-Z0-9]{16}"
            },
            "AddUserRequest": {
                "$ref": "#/components/schemas/UserInfoObject"
            },
            "PatchUserRequest": {
                "type": "object",
                "required": ["fiscalNumber"],
                "properties": {
                    "fiscalNumber": {
                        "$ref": "#/components/schemas/FiscalNumber"
                    }
                },
                "example": {
                    "fiscalNumber": "ZRSGLC89D05H501J"
                }
            },
            "AddUserResponse": {
                "type": "object",
                "required": [
                    "id",
                    "firstName",
                    "lastName",
                    "codice_fiscale",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "codice_fiscale": {
                        "$ref": "#/components/schemas/FiscalNumber"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "example": {
                    "id": 1,
                    "firstName": "Mario",
                    "lastName": "Rossi",
                    "codice_fiscale": "RSSMRA80H04F205W",
                    "email": "public.administration@agid.gov.it"
                }
            },
            "UserStatus": {
                "type": "string",
                "description": "Stato dell'utente",
                "enum": ["activated", "not_activated"]
            },
            "UserInfoObjectArray": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/AddUserResponse"
                }
            },
            "UserInfoPermisionObject": {
                "type": "object",
                "required": ["siteId"],
                "properties": {
                    "siteId": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "UserInfoObject": {
                "type": "object",
                "required": [
                    "firstName",
                    "lastName",
                    "email",
                    "fiscalNumber",
                    "permissions"
                ],
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "permissions": {
                        "$ref": "#/components/schemas/UserInfoPermisionObject"
                    },
                    "fiscalNumber": {
                        "$ref": "#/components/schemas/FiscalNumber"
                    }
                },
                "example": {
                    "firstName": "User",
                    "lastName": "Example",
                    "email": "name@email.com",
                    "fiscalNumber": "ZRSGLC89D05H501J",
                    "permissions": {
                        "siteId" : ["manage-analytics"]
                    }
                }
            }
        },
        "securitySchemes": {
            "oAuth": {
                "type": "oauth2",
                "description": "This API uses OAuth 2 with the client credentials flow.",
                "flows": {
                    "clientCredentials": {
                        "tokenUrl": "",
                        "scopes": {}
                    }
                }
            }
        }
    },
    "security": [
        {
            "oAuth": []
        }
    ]
}
